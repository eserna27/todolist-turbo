<%= turbo_frame_tag list, target: "_top" do %>
  <%= link_to list, class: "w-100 text-decoration-none" do %>
    <div class="card mb-2 mx-2">
      <div class="card-body d-flex align-items-center">
        <div class="w-75 text-dark">
          <%= list.title %>
        </div>
        <div class="d-flex flex-row w-25 justify-content-end">
          <%= link_to "Editar", edit_list_path(list), class: "btn btn-sm btn-default", data: { "turbo-frame": dom_id(list) }  %>
          <%= button_to list, method: :delete, class: "btn btn-link" do %>
            <i class="bi bi-trash text-danger"></i>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
<% end %>
